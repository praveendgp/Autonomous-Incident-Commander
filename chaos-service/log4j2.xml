<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>
        <Property name="serviceName">${env:SERVICE_NAME:-chaos-service}</Property>
        <Property name="logDir">logs</Property>
    </Properties>

    <Appenders>

        <!-- ===================== -->
        <!-- ERROR LOGS (THROWN)  -->
        <!-- ===================== -->
        <RollingFile
                name="ErrorFile"
                fileName="${logDir}/${serviceName}-error.log"
                filePattern="${logDir}/${serviceName}-error-%d{yyyy-MM-dd}-%i.log.gz">

            <Filters>
                <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>

            <JsonLayout
                    compact="true"
                    eventEol="true"
                    stacktraceAsString="true"/>

            <!-- ðŸ”´ REQUIRED -->
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>

        </RollingFile>

        <!-- ========================== -->
        <!-- NON-ERROR LOGS (STRUCT)  -->
        <!-- ========================== -->
        <RollingFile
                name="AppFile"
                fileName="${logDir}/${serviceName}.log"
                filePattern="${logDir}/${serviceName}-%d{yyyy-MM-dd}-%i.log.gz">

            <Filters>
                <ThresholdFilter level="ERROR" onMatch="DENY" onMismatch="ACCEPT"/>
            </Filters>

            <JsonLayout
                    compact="true"
                    eventEol="true"/>

            <!-- ðŸ”´ REQUIRED -->
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>

        </RollingFile>

    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="ErrorFile"/>
            <AppenderRef ref="AppFile"/>
        </Root>
    </Loggers>

</Configuration>
